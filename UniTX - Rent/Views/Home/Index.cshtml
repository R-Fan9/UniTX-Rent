        <div class="card">
            <div class="card-image">
                <img src="/images/Textbook.png">
                <span class="card-title">Textbooks</span>
                <a asp-controller="Textbook" asp-action="Index" class="btn-floating btn-large halfway-fab waves-effect waves-light red"><i class="material-icons">forward</i></a>
