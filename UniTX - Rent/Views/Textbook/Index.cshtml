@model UniTX___Rent.Models.Textbook.TextbookIndexModel

<div class="row">
    @foreach (var tx in Model.Textbooks)
    {
        <div class="col col-sm-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-image">
                    <img src="@tx.ImageUrl" class="responsive-img"/>
                    <a asp-controller="Textbook" asp-action="Detail" asp-route-id="@tx.Id" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">more_horiz</i></a>
                </div>
                <div class="card-content">
                    <p>@tx.Title</p>
                </div>
                <div class="card-action">
                    <span class="card-title">$@tx.Cost</span>
                </div>
            </div>
        </div>
    }
</div>